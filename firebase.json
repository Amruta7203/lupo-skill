{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "storage": {
    "rules": "storage.rules",
    "cors": [
      {
        "origin": ["http://localhost:3000"],
        "method": ["GET", "PUT", "POST", "DELETE"],
        "maxAgeSeconds": 3600
      }
    ]
  }
}
